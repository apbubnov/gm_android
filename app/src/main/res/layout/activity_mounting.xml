<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="ru.ejevikaapp.gm_android.Dealer.Activity_mounting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <Button
        android:id="@+id/btn_brigade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Бригады"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"/>

    <fragment
        android:id="@+id/fragment_empty_activity"
        android:name="ru.ejevikaapp.gm_android.Fragments.Frag_g3_zapusch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/frag_g3_zapusch">
    </fragment>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

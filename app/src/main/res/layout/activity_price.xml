<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ejevikaapp.gm_android.ActivityPrice"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Прайсы"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|top">

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:text="Прайс полотен"
        android:id="@+id/price_canvases"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:text="Прайс комплектующих"
        android:id="@+id/price_comp"/>

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffff"
        android:text="Прайс монтажа"
        android:id="@+id/price_mounting"/>
    </LinearLayout>

</LinearLayout>

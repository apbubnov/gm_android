<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/backgroun"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_proj"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:text="Проект № "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="Клиент"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/name_cl"
                    android:clickable="true"
                    style="@style/text_style_spisok"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/edit_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_btn_blue_text"
                    android:scaleType="fitCenter"
                    android:src="@drawable/edit" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:text="Телефоны"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/phone_lay2"
                        android:layout_weight="1"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/phone_lay1"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center|right"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Адрес"
                    android:textColor="#000000"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:layout_weight="2"/>

                <TextView
                    android:id="@+id/address_cl"
                    style="@style/text_style_spisok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:clickable="true" />

                <ImageButton
                    android:id="@+id/edit_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_btn_blue_text"
                    android:scaleType="fitCenter"
                    android:src="@drawable/edit" />

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Реклама"
                    android:layout_gravity="center|left"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/advertisement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textSize="15dp" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_btn_blue_text"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="Дата и время замера"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="left|center"
                    android:layout_gravity="center"
                    android:id="@+id/data_cl"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_btn_blue_text"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:gravity="left|center"
                    android:text="Замерщик"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:id="@+id/project_calculator"
                    android:layout_weight="1"/>

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_btn_blue_text"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:textColor="#000000"
                android:text="Монтаж"/>

            <ru.ejevikaapp.gm_android.Class.NonScrollListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listMounts"
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:textColor="#000000"
                android:text="Потолки"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_calc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_calc2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_marginTop="2dp"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Общая площадь/ \nобщий периметр :"
                    style="@style/text_style_spisok"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/S_and_P"
                    android:layout_weight="1"
                    style="@style/text_style_spisok"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/final_amount_disc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:text="Итого :"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/final_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/components_sum_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/mounting_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/total_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="right"/>
            </LinearLayout>

            <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Назначить/изменить монтажную бригаду, время и дату" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/calendar_other_month"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/calendar_minus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:background="#43358c"
                    android:src="@drawable/left_arrow"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/calendar_month"
                    style="@style/text_style_spisok"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="месяц год" />

                <ImageButton
                    android:id="@+id/calendar_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:background="#43358c"
                    android:src="@drawable/right_arrow"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    style="@style/text_style_spisok"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_other_month"
                    android:gravity="center"
                    android:text="ПH" />

                <TextView
                    style="@style/text_style_spisok"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_other_month"
                    android:gravity="center"
                    android:text="ВТ" />

                <TextView
                    style="@style/text_style_spisok"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_other_month"
                    android:gravity="center"
                    android:text="СР" />

                <TextView
                    style="@style/text_style_spisok"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_other_month"
                    android:gravity="center"
                    android:text="ЧТ" />

                <TextView
                    style="@style/text_style_spisok"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_other_month"
                    android:gravity="center"
                    android:text="ПТ" />

                <TextView
                    style="@style/text_style_spisok"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_other_month"
                    android:gravity="center"
                    android:text="СБ" />

                <TextView
                    style="@style/text_style_spisok"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/calendar_other_month"
                    android:gravity="center"
                    android:text="ВС" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TableLayout>

            <Button
                android:id="@+id/saveProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/rounded_button"
                android:text=" Сохранить "
                android:textColor="#ffffff"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

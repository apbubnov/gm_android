<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/backgroun"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Просмотр проекта"
                android:gravity="center"
                android:textSize="20dp"
                style="@style/text_style_spisok"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_proj"
                style="@style/text_style_spisok"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="Информация по проекту № "/>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_style_spisok"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Клиент"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:id="@+id/name_cl"
                    android:inputType="textMultiLine"
                    style="@style/text_style_spisok"
                    android:gravity="center"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"/>


            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/text_style_spisok"
                android:gravity="center"
                android:text="Телефоны"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/phone_lay1"
                    android:orientation="vertical">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/phone_lay2"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    style="@style/text_style_spisok"
                    android:textSize="15dp"
                    android:text="Адрес"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    style="@style/text_style_spisok"
                    android:id="@+id/address_cl"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    style="@style/text_style_spisok"
                    android:textSize="15dp"
                    android:text="Дата и время замера"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/data_cl"
                    style="@style/text_style_spisok"
                    android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    style="@style/text_style_spisok"
                    android:textSize="15dp"
                    android:text="Дата и время монтажа"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/data_mounting"
                    style="@style/text_style_spisok"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_style_spisok"
                    android:gravity="center|left"
                    android:text="Дилер"
                    android:textSize="15dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/dealer_cl"
                    style="@style/text_style_spisok"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                style="@style/text_style_spisok"
                android:textSize="17dp"
                android:text="Потолки"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/linear_calc">
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_marginTop="2dp"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                style="@style/text_style_spisok"
                android:textSize="17dp"
                android:text="Транспорт"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/radios_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_transport_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="По городу"
                        style="@style/text_style_spisok"/>

                    <EditText
                        android:id="@+id/edit_transport_1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edit_text_style"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:hint="Кол-во выездов"/>

                    <RadioButton
                        android:id="@+id/rb_transport_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="За город"
                        style="@style/text_style_spisok"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/edit_transport_21"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edit_text_style"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:textSize="15dp"
                            android:hint="Кол-во выездов" />
                        <EditText
                            android:id="@+id/edit_transport_22"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edit_text_style"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:textSize="15dp"
                            android:hint="Кол-во раз"/>
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rb_transport_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Без транспорта"
                        style="@style/text_style_spisok" />
                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/btn_transport_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:text="Ок"
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff"/>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_marginTop="2dp"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/final_transport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:text="Транспорт :"
                    android:layout_gravity="left"/>

                <TextView
                    android:id="@+id/final_transport_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Общая площадь/ \nобщий периметр :"
                    style="@style/text_style_spisok"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/S_and_P"
                    android:layout_weight="1"
                    style="@style/text_style_spisok"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/final_amount_disc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:text="Итого :"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/final_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/components_sum_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/mounting_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/total_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="right"/>
            </LinearLayout>

            <Button
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text=" Выполнен "
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    style="@style/backgroun"
    android:focusableInTouchMode="true"
    android:id="@+id/view_general_inform">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Просмотр проекта"
                android:gravity="center"
                android:textSize="20dp"
                style="@style/text_style_spisok"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_proj"
                style="@style/text_style_spisok"
                android:textSize="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="Информация по проекту № "/>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_style_spisok"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Клиент"
                    android:layout_weight="1"/>

                <EditText
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:background="@drawable/edit_text_style"
                    android:textSize="15dp"
                    android:id="@+id/name_cl"
                    android:inputType="textMultiLine"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/text_style_spisok"
                android:gravity="center"
                android:text="Телефоны"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edit_text_style"
                            android:textSize="15dp"
                            android:hint="+7xxxxxxxxxx"
                            android:id="@+id/contact_cl"
                            android:inputType="phone"
                            android:maxLength="12"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/add_contact"
                            android:background="@drawable/rounded_button"
                            android:textColor="#ffffff"
                            android:text="Добавить"/>
                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/phone_lay1"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/phone_lay2"
                android:orientation="vertical">
            </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Адрес клиента"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_style_spisok"
                        android:text="Улица клиента"
                        android:layout_weight="1"/>
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="Улица клиента"
                        android:layout_weight="1"
                        android:inputType="textMultiLine"
                        android:paddingLeft="5dp"
                        android:id="@+id/c_address"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_style_spisok"
                        android:text="Дом"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_style_spisok"
                        android:text="Корпус"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_style_spisok"
                        android:text="Подъезд"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="дом"
                        android:maxLength="9"
                        android:layout_weight="1"
                        android:inputType="phone"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/c_house"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="корпус"
                        android:layout_weight="1"
                        android:maxLength="5"
                        android:inputType="phone"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/с_body"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="подъезд"
                        android:layout_weight="1"
                        android:maxLength="5"
                        android:inputType="phone"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/c_porch"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_style_spisok"
                        android:text="Этаж"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_style_spisok"
                        android:text="Квартира"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_style_spisok"
                        android:text="Код"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="этаж"
                        android:layout_weight="1"
                        android:inputType="phone"
                        android:maxLength="2"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/c_floor"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="квартира"
                        android:layout_weight="1"
                        android:inputType="phone"
                        android:maxLength="5"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/c_room"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="код"
                        android:layout_weight="1"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/c_code"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    style="@style/text_style_spisok"
                    android:textSize="15dp"
                    android:text="Дата и время замера"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:id="@+id/data_cl"
                    android:layout_weight="1"/>
            </LinearLayout>


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/sp_date"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                style="@style/spinner_style"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_style_spisok"
                    android:textSize="15dp"
                    android:layout_weight="1"/>

                <Button android:id="@+id/dateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Изменить дату"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_button"
                    android:textColor="#ffffff"
                    android:layout_marginBottom="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_style_spisok"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:text="Примечание клиента"
                    android:layout_weight="1"/>

                <EditText
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/edit_text_style"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:id="@+id/notes_cl"
                    android:hint="Примечание клиента"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_style_spisok"
                    android:gravity="center|left"
                    android:text="Дилер"
                    android:textSize="15dp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:id="@+id/dealer_cl"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Новый процент скидки:"
                    android:textSize="17dp"
                    style="@style/text_style_spisok"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/ed_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Введите скидку"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_discount_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:text="Ок"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button"
                    android:textColor="#ffffff"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                style="@style/text_style_spisok"
                android:textSize="17dp"
                android:text="Потолки"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/linear_calc">
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_marginTop="2dp"
                android:layout_height="1dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                style="@style/text_style_spisok"
                android:textSize="17dp"
                android:text="Транспорт"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioGroup
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/radios_transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rb_transport_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="По городу"
                        style="@style/text_style_spisok"/>

                    <EditText
                        android:id="@+id/edit_transport_1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edit_text_style"
                        android:textSize="15dp"
                        android:inputType="number"
                        android:hint="Кол-во выездов"/>

                    <RadioButton
                        android:id="@+id/rb_transport_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="За город"
                        style="@style/text_style_spisok" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/edit_transport_21"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edit_text_style"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:textSize="15dp"
                            android:hint="км." />
                        <EditText
                            android:id="@+id/edit_transport_22"
                            android:layout_width="90dp"
                            android:layout_height="40dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edit_text_style"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:inputType="number"
                            android:textSize="15dp"
                            android:hint="раз"/>
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/rb_transport_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Без транспорта"
                        style="@style/text_style_spisok"/>
                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/btn_transport_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:text="Ок"
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff"/>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_marginTop="5dp"
                android:layout_height="2dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/final_transport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:text="Транспорт :"
                    android:layout_gravity="left"/>

                <TextView
                    android:id="@+id/final_transport_sum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Общая площадь/ \nобщий периметр :"
                    style="@style/text_style_spisok"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/S_and_P"
                    android:layout_weight="1"
                    style="@style/text_style_spisok"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/final_amount_disc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:text="Итого :"
                    android:layout_gravity="left"/>
                <TextView
                    android:id="@+id/final_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/components_sum_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/mounting_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/total_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:gravity="right"/>
            </LinearLayout>

            <Button
                android:id="@+id/new_calc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text=" Добавить новый расчёт "
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff" />

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text=" Договор "
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_button_green"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/failure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text=" Отказ "
                    android:background="@drawable/rounded_button_red"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/lin_m3"
                android:visibility="gone">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_style_spisok"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:text="Примечание к договору"
                    android:layout_weight="1"/>

                <EditText
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/edit_text_style"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:id="@+id/notes_gm_calc"

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/backgroun"
    android:id="@+id/view_general_inform"
    android:fillViewport="true"
    android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_proj"
                android:textSize="18dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"
                android:gravity="center"
                android:text="Проект № "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="Клиент"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:id="@+id/name_cl"
                    android:clickable="true"
                    style="@style/text_style_spisok"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Телефоны"
                    android:textColor="#000000"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:layout_weight="2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/phone_lay2"
                        android:orientation="vertical">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/phone_lay1"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Адрес"
                    android:textColor="#000000"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/text_style_spisok"
                    android:clickable="true"
                    android:id="@+id/c_address"/>

            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:text="Дата и время замера"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    style="@style/text_style_spisok"
                    android:clickable="true"
                    android:id="@+id/data_cl"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:text="Примечание менеджера"
                    android:layout_weight="2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:id="@+id/notes_cl"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Новый процент скидки:"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center">

                <EditText
                    android:id="@+id/ed_discount"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Введите скидку"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:layout_gravity="center"/>

                <Button
                    android:id="@+id/btn_discount_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Ок"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button"
                    android:textColor="#ffffff"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/visible_potolok"
                android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:background="#000000"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:text="Потолки"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:id="@+id/linear_calc">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/linear_calc2">
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:background="#000000"
                    android:layout_marginTop="2dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:textColor="#000000"
                    android:text="Транспорт"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioGroup
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/radios_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rb_transport_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="По городу"
                            style="@style/text_style_spisok"/>

                        <EditText
                            android:id="@+id/edit_transport_1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:paddingLeft="5dp"
                            android:background="@drawable/edit_text_style"
                            android:textSize="15dp"
                            android:inputType="number"
                            android:hint="Кол-во выездов"/>

                        <RadioButton
                            android:id="@+id/rb_transport_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="За город"
                            style="@style/text_style_spisok" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:id="@+id/edit_transport_21"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:paddingLeft="5dp"
                                android:background="@drawable/edit_text_style"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:textSize="15dp"
                                android:hint="км." />
                            <EditText
                                android:id="@+id/edit_transport_22"
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:paddingLeft="5dp"
                                android:background="@drawable/edit_text_style"
                                android:layout_weight="1"
                                android:layout_marginLeft="10dp"
                                android:inputType="number"
                                android:textSize="15dp"
                                android:hint="раз"/>
                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/rb_transport_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Без транспорта"
                            style="@style/text_style_spisok"/>
                    </RadioGroup>

                </LinearLayout>

                <Button
                    android:id="@+id/btn_transport_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:text="Ок"
                    android:background="@drawable/rounded_button"
                    android:textColor="#ffffff"/>

                <View
                    android:layout_width="wrap_content"
                    android:background="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_height="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/final_transport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        style="@style/text_style_spisok"
                        android:text="Транспорт :"
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/final_transport_sum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        style="@style/text_style_spisok"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Общая площадь/ \nобщий периметр :"
                        style="@style/text_style_spisok"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/S_and_P"
                        android:layout_weight="1"
                        style="@style/text_style_spisok"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/final_amount_disc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        style="@style/text_style_spisok"
                        android:text="Итого :"
                        android:layout_gravity="left"/>
                    <TextView
                        android:id="@+id/final_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        style="@style/text_style_spisok"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:background="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/canvases_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        style="@style/text_style_spisok"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/components_sum_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        style="@style/text_style_spisok"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/mounting_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        style="@style/text_style_spisok"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/total_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:background="@drawable/edit_text_style"
                        style="@style/text_style_spisok"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/new_calc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=" Добавить расчёт "
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff" />

            <View
                android:layout_width="wrap_content"
                android:background="#000000"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/contract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text=" Договор "
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_button_green"
                    android:textColor="#ffffff" />

                <Button
                    android:id="@+id/failure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:text=" Отказ "
                    android:background="@drawable/rounded_button_red"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/lin_m3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/text_style_spisok"
                        android:gravity="center|left"
                        android:textSize="15dp"
                        android:text="Примечание к договору"
                        android:layout_weight="2"/>

                    <EditText
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="40dp"
                        android:paddingLeft="5dp"
                        android:background="@drawable/edit_text_style"
                        android:textSize="15dp"
                        android:inputType="textMultiLine"
                        android:id="@+id/notes_gm_calc"
                        android:hint="Примечание к договору"
                        android:layout_weight="1"/>
                    </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                style="@style/text_style_spisok"
                android:textSize="17dp"
                android:id="@+id/text1"
                android:text="Выберите дату монтажа"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/calendar_other_month"
                    android:layout_marginTop="10dp">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:textColor="#ffffff"
                        android:background="#43358c"
                        android:id="@+id/calendar_minus"
                        android:src="@drawable/left_arrow"
                        android:textSize="25dp"/>

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/calendar_month"
                        android:text="месяц год"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        style="@style/text_style_spisok"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="right"
                        android:background="#43358c"
                        android:textColor="#ffffff"
                        android:id="@+id/calendar_plus"
                        android:src="@drawable/right_arrow"
                        android:textSize="25dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ПH"
                        android:gravity="center"
                        style="@style/text_style_spisok"
                        android:background="@drawable/calendar_other_month"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ВТ"
                        android:gravity="center"
                        style="@style/text_style_spisok"
                        android:background="@drawable/calendar_other_month"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="СР"
                        android:gravity="center"
                        style="@style/text_style_spisok"
                        android:background="@drawable/calendar_other_month"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ЧТ"
                        android:gravity="center"
                        style="@style/text_style_spisok"
                        android:background="@drawable/calendar_other_month"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ПТ"
                        android:gravity="center"
                        style="@style/text_style_spisok"
                        android:background="@drawable/calendar_other_month"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="СБ"
                        android:gravity="center"
                        style="@style/text_style_spisok"
                        android:background="@drawable/calendar_other_month"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="ВС"
                        android:gravity="center"
                        style="@style/text_style_spisok"
                        android:background="@drawable/calendar_other_month"
                        android:layout_weight="1"/>
                </LinearLayout>

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/lin_m4">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/text_style_spisok"
                    android:gravity="center|left"
                    android:textSize="15dp"
                    android:text="Примечание к монтажу"
                    android:layout_weight="2"/>

                <EditText
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="40dp"
                    android:paddingLeft="5dp"
                    android:background="@drawable/edit_text_style"
                    android:textSize="15dp"
                    android:inputType="textMultiLine"
                    android:id="@+id/notes_gm_chief"
                    android:hint="Примечание к монтажу"
                    android:layout_weight="1"/>
            </LinearLayout>

            <Button android:id="@+id/save_proj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сохранить и запустить в производство"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

            </LinearLayout>

        </LinearLayout>
</ScrollView>

